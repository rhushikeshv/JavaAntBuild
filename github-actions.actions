name: Build and Release

on:
  push:
    tags:
      - 'v*'

jobs:
  build-and-release:
    runs-on: ubuntu-latest

    steps:
      - uses: actions/checkout@v4

      - name: Set up Java
        uses: actions/setup-java@v4
        with:
          java-version: '17'

      - name: Build with Ant
        run: ant zip

      - name: Upload release ZIP
        uses: softprops/action-gh-release@v2
        with:
          files: dist/*.zip
